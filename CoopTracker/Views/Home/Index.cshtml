<h1>Trackers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("GroupKeyMasterId")
            </th>
            <th>
                @Html.DisplayName("Start")
            </th>
            <th>
                @Html.DisplayName("End")
            </th>
            <th>
                @Html.DisplayName("Submit")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trackers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @(HttpContextAccessor.HttpContext.Session.GetInt32("trackerId") != null&& item.TrackerId ==HttpContextAccessor.HttpContext.Session.GetInt32("trackerId") ? "Yes":"--")
                </td>
                <td>
                    <a asp-controller="Tracker" asp-action="Select" asp-route-id="@item.TrackerId">Select</a> |
