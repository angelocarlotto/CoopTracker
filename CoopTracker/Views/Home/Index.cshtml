                    <a asp-controller="Tracker" asp-action="Details" asp-route-id="@item.TrackerId">Details</a> |
                    <a asp-controller="Tracker" asp-action="Delete" asp-route-id="@item.TrackerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
