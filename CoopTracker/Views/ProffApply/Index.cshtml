@model CoopTracker.Models.ProffApplyModelIndex

@{
    ViewData["Title"] = "Index";

}

<h1>List of Attachements</h1>

@if (Model.TrackeeId != null)
{
    <p>
        <a asp-action="Create" asp-route-trakeeId="@Model.TrackeeId">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProffApplyModelUpdateList)
            {
                <tr>
                    <td>
                      <a href="@item.UserPicture" target="_blank">  <img src=@(item.UserPicture == null ? null : item.UserPicture) width="200" /></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileType)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProffApplyId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProffApplyId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProffApplyId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-danger"> No trakee select</div>
}